{
  "name": "chess_opening_drills",
  "description": "A cross platform chess opening preparation tool.",
  "author": "theProgramLuke",
  "version": "0.4.1",
  "private": true,
  "scripts": {
    "pegjs:pgnGrammar": "yarn tspegjs -o src/store/pgnGrammar.ts src/store/pgnGrammar.pegjs",
    "pegjs": "yarn pegjs:pgnGrammar",
    "serve": "yarn pegjs && vue-cli-service serve",
    "build": "yarn pegjs && vue-cli-service build",
    "test:unit": "yarn pegjs && vue-cli-service test:unit",
    "lint": "yarn pegjs && vue-cli-service lint",
    "electron:build": "yarn pegjs && vue-cli-service electron:build",
    "electron:serve": "yarn pegjs && vue-cli-service electron:serve",
    "electron:generate-icons": "electron-icon-builder --input=./public/icon.png --output=build --flatten",
    "release": "yarn electron:build -p onTagOrDraft",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps"
  },
  "main": "background.js",
  "dependencies": {
    "@types/electron-store": "3.2.0",
    "core-js": "^3.6.5",
    "electron-store": "6.0.0",
    "register-service-worker": "^1.7.1",
    "vue": "^2.6.11",
    "vue-class-component": "^7.2.3",
    "vue-property-decorator": "^8.4.2",
    "vue-router": "^3.2.0",
    "vuetify": "^2.2.11",
    "vuex": "^3.4.0"
  },
  "devDependencies": {
    "@types/chess.js": "0.10.1",
    "@types/electron-devtools-installer": "2.2.0",
    "@types/file-saver": "2.0.1",
    "@types/graceful-fs": "4.1.3",
    "@types/jest": "^24.0.19",
    "@types/lodash": "4.14.159",
    "@types/node": ">=12.0.0 <13.0.0",
    "@types/node-uci": "1.3.0",
    "@types/plotly.js": "1.50.17",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-pwa": "~4.5.0",
    "@vue/cli-plugin-router": "~4.5.0",
    "@vue/cli-plugin-typescript": "~4.5.0",
    "@vue/cli-plugin-unit-jest": "~4.5.0",
    "@vue/cli-plugin-vuex": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^5.0.2",
    "@vue/test-utils": "^1.0.3",
    "chess.js": "0.11.0",
    "chessground": "7.9.1",
    "electron": "^9.0.0",
    "electron-devtools-installer": "^3.1.0",
    "electron-icon-builder": "1.0.2",
    "eslint": "^6.7.2",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-vue": "^6.2.2",
    "file-saver": "2.0.2",
    "graceful-fs": "4.2.4",
    "guid-typescript": "1.0.9",
    "imports-loader": "1.1.0",
    "jest-serializer-vue": "2.0.2",
    "lint-staged": "^9.5.0",
    "lodash": "4.17.19",
    "node-sass": "^4.12.0",
    "node-uci": "1.3.4",
    "plotly.js": "1.54.7",
    "prettier": "^1.19.1",
    "sass": "^1.19.0",
    "sass-loader": "^8.0.2",
    "spectron": "^11.0.0",
